{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "outDir": "./lib",
        "target": "ES2019",
        "baseUrl": ".",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": ["ES2015", "ES2017", "Dom", "DOM.Iterable"],
        "types": ["node"],
        "allowJs": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
